<?xml version="1.1" encoding="UTF-8" standalone="no"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="init-queue" author="rmimamov">

        <createTable tableName="queue_status">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="queue_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_queue_binding_status" references="queue(id)"/>
            </column>
            <column name="count_of_users" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="average_service_time" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="total_count_of_users" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="current_status" type="text" defaultValue="inactive">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>